<schemalist>
  <schema id="org.gnome.shell.extensions.highlight-focus" path="/org/gnome/shell/extensions/highlight-focus/">

    <key type="s" name="border-color">
        <default>"#000000"</default>
        <summary>border color</summary>
        <description>Set border color.</description>
    </key>

    <key name="border-width" type="i">
      <default>2</default>
      <summary>Border Width</summary>
      <description>Width of highlighting border.</description>
    </key>

    <key name="border-radius" type="i">
      <default>6</default>
      <summary>Border Radius</summary>
      <description>Border Radius.</description>
    </key>

    <key name="disable-hiding" type="b">
      <default>false</default>
      <summary>Disable border hiding</summary>
      <description>Always show border on focussed window.</description>
    </key>

    <key name="hide-delay" type="i">
      <default>1000</default>
      <summary>Hide delay in microseconds</summary>
      <description>Delay in microseconds after when the border will be hidden.</description>
    </key>

    <key name="gap-size" type="i">
      <default>20</default>
      <summary>Gap size between windows</summary>
      <description>Margin in pixel windows when tiled left or right or maximized.</description>
    </key>

    <key name="no-gap-when-maximized" type="b">
      <default>false</default>
      <summary>Don't add gap when windows are maximized</summary>
      <description>If set only tiles windows get a gap.</description>
    </key>
  </schema>
</schemalist>
